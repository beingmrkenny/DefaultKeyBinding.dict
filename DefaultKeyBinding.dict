/*
  Default keybindings fix for Mac OS X
  by Tunghsiao Liu t@sparanoid.com
*/

{
  // Multiple sign fix
  "^*" = ("insertText:", "×");

  // Curly quotes fix
  "^[" = ("insertText:", "“");
  "^]" = ("insertText:", "”");
  "^{" = ("insertText:", "‘");
  "^}" = ("insertText:", "’");

  // Chinese quotation marks fix
  "~[" = ("insertText:", "「");
  "~]" = ("insertText:", "」");
  "~{" = ("insertText:", "『");
  "~}" = ("insertText:", "』");
}
